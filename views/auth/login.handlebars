<section id="authBlock my-4">
  <article class="col-md-3 mx-auto bg-white my-4">
    <div class="card-body">
      <h2
        class="h2 font-weight-bold text-secondary text-uppercase py-2"
      >Login</h2>
      <form action="/auth/login" method="post">

        <div class="form-group">
          <label for="email">email</label>
          <input
            type="text"
            class="form-control"
            name="email"
            placeholder="enter email"
            id="email"
          />
        </div>

        <div class="form-group">
          <label for="password">password</label>
          <input
            type="password"
            class="form-control"
            id="password"
            name="password"
            placeholder="enter password"
          />
        </div>

        <div class="form-group">
          <a href="/auth/register" class="float-right p-2">Register</a>
          <button
            class="btn btn-block btn-primary my-2 text-uppercase font-weight-bold"
          >Login</button>
        </div>
      </form>
    </div>
  </article>
</section>